---
import "../styles/global.css";

export interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  image?: string;
}

const {
  title = "Justin Chow - UofT EngSci | Software Engineer | ML Researcher",
  description = "Justin Chow - UofT Engineering Science student and ML researcher working on machine learning, reinforcement learning, software engineering, and low latency systems.",
  keywords = "Justin Chow, University of Toronto, EngSci, Machine Learning, Reinforcement Learning, Software Engineering, Quantitative Development, Low Latency Systems, Distributed Systems",
  image = "profile.jpg",
} = Astro.props;

const rawBase = import.meta.env.BASE_URL || "/";
const baseHref = rawBase.endsWith("/") ? rawBase : `${rawBase}/`;
const faviconHref = `${baseHref}favicon.svg`;
const imageUrl = `https://just6660.github.io/${image}`;
const canonicalUrl = "https://just6660.github.io/";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Justin Cui" />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="English" />

    <!-- Viewport -->
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, viewport-fit=cover"
    />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageUrl} />
    <meta property="og:site_name" content="Justin Cui" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={imageUrl} />

    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Justin Chow",
        "url": "https://just6660.github.io/",
        "image": "https://just6660.github.io/profile.jpg",
        "jobTitle": "Software Engineer"
        "worksFor": [
          {
            "@type": "Organization",
            "name": "StoneX Group"
          }
        ],
        "alumniOf": {
          "@type": "Organization",
          "name": "University of Toronto",
          "department": "Engineering Science"
        },
        "email": "just6660@gmail.com",
        "sameAs": [
          "https://github.com/just6660",
          "https://www.linkedin.com/in/justin-chow-114659199/",
          "https://scholar.google.com/citations?user=xldCmkEAAAAJ&hl=en"
        ],
        "knowsAbout": [
          "Machine Learning",
          "Artificial Intelligence",
          "Software Engineering",
          "Low Latency Systems",
          "Distributed Systems"
        ],
        "description": "Fourth-year Engineering Science student at University of Toronto specializing in Machine Intelligence."
      }
    </script>

    <base href={baseHref} />
    <link rel="icon" type="image/svg+xml" href={faviconHref} />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body>
    <slot />
  </body>
</html>
